<h1>New population</h1>
<%= form_with model: Grid.new, url: root_path do |f| %>
  <% [:rows, :columns, :phase_duration, :phases].each do |attribute| %>
    <div>
      <%= f.label attribute %>
      <%= f.number_field attribute, required: true, **step(Grid, attribute), **min_and_max(Grid, attribute) %>
    </div>
  <% end %>

  <%= f.submit %>
<% end %>
